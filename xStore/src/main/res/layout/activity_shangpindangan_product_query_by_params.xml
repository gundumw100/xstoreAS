<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_comm" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="品牌"
                    android:textSize="@dimen/font_middle" />

                <com.widget.flowlayout.FlowLayout
                    android:id="@+id/flowLayout_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/cb_all_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="00"
                        android:text="全部"
                        android:textSize="@dimen/font_middle" />
                </com.widget.flowlayout.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="年份"
                    android:textSize="@dimen/font_middle" />

                <com.widget.flowlayout.FlowLayout
                    android:id="@+id/flowLayout_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="00"
                        android:text="全部"
                        android:textSize="@dimen/font_middle" />
                </com.widget.flowlayout.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="季节"
                    android:textSize="@dimen/font_middle" />

                <com.widget.flowlayout.FlowLayout
                    android:id="@+id/flowLayout_season"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="00"
                        android:text="全部"
                        android:textSize="@dimen/font_middle" />
                </com.widget.flowlayout.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="类别"
                    android:textSize="@dimen/font_middle" />

                <com.widget.flowlayout.FlowLayout
                    android:id="@+id/flowLayout_sort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="00"
                        android:text="全部"
                        android:textSize="@dimen/font_middle" />
                </com.widget.flowlayout.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="其他"
                    android:textSize="@dimen/font_middle" />

                <com.widget.flowlayout.FlowLayout
                    android:id="@+id/flowLayout_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="00"
                        android:text="全部"
                        android:textSize="@dimen/font_middle" />
                </com.widget.flowlayout.FlowLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="标签"
                    android:textSize="@dimen/font_middle" />

                <com.widget.flowlayout.FlowLayout
                    android:id="@+id/flowLayout_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="00"
                        android:text="全部"
                        android:textSize="@dimen/font_middle" />
                </com.widget.flowlayout.FlowLayout>
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btn_ok"
        style="@style/text_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:textSize="@dimen/font_middle" />

</LinearLayout>