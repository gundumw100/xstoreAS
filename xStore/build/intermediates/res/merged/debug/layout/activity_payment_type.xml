<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_comm" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical" >

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/grayDark"
	                    android:text="订单金额："
	                    android:textSize="@dimen/font_middle" />
	                <TextView
	                    android:id="@+id/item_price"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/primary"
	                    android:textSize="@dimen/font_middle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="--积分抵现"
                        android:textColor="@color/grayDark"
                        android:textSize="@dimen/font_middle" />

                    <EditText
                        android:id="@+id/et_jifen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textColor="@color/grayDark"
                        android:textSize="@dimen/font_middle" 
                        android:enabled="false"
                        />

                    <TextView
                        android:id="@+id/btn_jifen"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_blue"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="用积分"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_middle" />
                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="--用券优惠"
                        android:textColor="@color/grayDark"
                        android:textSize="@dimen/font_middle" />

                    <EditText
                        android:id="@+id/et_quan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textColor="@color/grayDark"
                        android:enabled="false"
                        android:textSize="@dimen/font_middle" />

                    <TextView
                        android:id="@+id/btn_quan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_blue"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="用券"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_middle" />
                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/item_pay_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="应付金额："
                    android:textColor="@color/grayDark"
                    android:textSize="@dimen/font_middle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="--储值卡"
                        android:textColor="@color/grayDark"
                        android:textSize="@dimen/font_middle" />

                    <EditText
                        android:id="@+id/et_ka"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textColor="@color/grayDark"
                        android:enabled="false"
                        android:textSize="@dimen/font_middle" />

                    <TextView
                        android:id="@+id/btn_ka"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_blue"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="用卡"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_middle" />
                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="--余额支付"
                        android:textColor="@color/grayDark"
                        android:textSize="@dimen/font_middle" />

                    <EditText
                        android:id="@+id/et_zhanghu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textColor="@color/grayDark"
                        android:enabled="false"
                        android:textSize="@dimen/font_middle" />

                    <TextView
                        android:id="@+id/btn_zhanghu"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_blue"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="账户"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_middle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayDark"
                    android:text="尚需支付："
                    android:textSize="@dimen/font_middle" />
                
                <TextView
                    android:id="@+id/item_need_pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/font_xbig" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择支付方式"
                    android:textColor="@color/grayDark"
                    android:textSize="@dimen/font_middle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_zhifubao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio_for_pament"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:text="支付宝"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_middle" />

                    <Button
                        android:id="@+id/btn_weixin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio_for_pament"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:text="微信"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_middle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_xianjin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio_for_pament"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:text="现金"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_middle" />

                    <Button
                        android:id="@+id/btn_shuaka"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio_for_pament"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:text="刷卡"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_middle" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>