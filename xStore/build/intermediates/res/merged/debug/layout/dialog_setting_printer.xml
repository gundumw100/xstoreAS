<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:id="@+id/btn_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:drawableRight="@drawable/arrow_down_middle"
            android:hint="请选择打印机型号"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/font_middle" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:hint="@string/tip_printer_name"
            android:maxLength="10"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/font_middle" />

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:hint="@string/tip_printer_ip"
            android:maxLength="30"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/font_middle" />

        <EditText
            android:id="@+id/et_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:hint="端口，默认9100"
            android:inputType="number"
            android:maxLength="5"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/font_middle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_for_dialog"
            android:text="取消"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/font_middle" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_for_dialog"
            android:text="确定"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/font_middle" />
    </LinearLayout>

</LinearLayout>