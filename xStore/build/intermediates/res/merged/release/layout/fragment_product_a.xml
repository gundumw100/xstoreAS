<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_add48_blue"
            android:gravity="center"
            android:padding="8dp"
            android:tag="A"
            android:text="A"
            android:textColor="@color/grayDark" />

        <com.widget.flowlayout.TagFlowLayout
            android:id="@+id/flowLayout_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:max_select="5"
            app:multi_suppout="true" >
        </com.widget.flowlayout.TagFlowLayout>

        <TextView
            android:id="@+id/tv_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_add48_blue"
            android:gravity="center"
            android:padding="8dp"
            android:tag="B"
            android:text="B"
            android:textColor="@color/grayDark" />

        <com.widget.flowlayout.TagFlowLayout
            android:id="@+id/flowLayout_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:max_select="5"
            app:multi_suppout="true" >
        </com.widget.flowlayout.TagFlowLayout>

        <TextView
            android:id="@+id/tv_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_add48_blue"
            android:gravity="center"
            android:padding="8dp"
            android:tag="C"
            android:text="C"
            android:textColor="@color/grayDark" />

        <com.widget.flowlayout.TagFlowLayout
            android:id="@+id/flowLayout_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:max_select="5"
            app:multi_suppout="true" >
        </com.widget.flowlayout.TagFlowLayout>

        <TextView
            android:id="@+id/tv_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_add48_blue"
            android:gravity="center"
            android:padding="8dp"
            android:tag="D"
            android:text="D"
            android:textColor="@color/grayDark" />

        <com.widget.flowlayout.TagFlowLayout
            android:id="@+id/flowLayout_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:max_select="5"
            app:multi_suppout="true" >
        </com.widget.flowlayout.TagFlowLayout>

        <TextView
            android:id="@+id/tv_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_add48_blue"
            android:gravity="center"
            android:padding="8dp"
            android:tag="E"
            android:text="E"
            android:textColor="@color/grayDark" />

        <com.widget.flowlayout.TagFlowLayout
            android:id="@+id/flowLayout_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:max_select="5"
            app:multi_suppout="true" >
        </com.widget.flowlayout.TagFlowLayout>
    </LinearLayout>

</ScrollView>