<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_enabled="true"><shape>
            <solid android:color="@color/grayDarkPressed" />

            <stroke android:width="0dp" android:color="@color/grayDarkPressed" />

            <corners android:radius="0dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/grayDark" />

            <stroke android:width="0dp" android:color="@color/grayDark" />

            <corners android:radius="0dp" />
        </shape></item>

</selector>